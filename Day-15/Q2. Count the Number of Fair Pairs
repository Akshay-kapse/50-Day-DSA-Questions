/**
 * @param {number[]} nums
 * @param {number} lower
 * @param {number} upper
 * @return {number}
 */
var countFairPairs = function (nums, lower, upper) {
    nums.sort((a, b) => a - b)

    function PairCount(valueOfLimit) {
        let left = 0, right = nums.length - 1, total = 0
        while (left < right) {
            let sum = nums[left] + nums[right]
            if (sum <= valueOfLimit) {
                total += (right - left)
                left++
            } else {
                right--
            }
        }
        return total
    }

    return PairCount(upper) - PairCount(lower - 1)
};
