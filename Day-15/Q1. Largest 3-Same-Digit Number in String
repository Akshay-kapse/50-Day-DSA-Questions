// 🔸 Platform: LeetCode
// 🔸 Problem: 2264. Largest 3-Same-Digit Number in String
// 🔹 Difficulty: Easy
// 🔗 Link: https://leetcode.com/problems/largest-3-same-digit-number-in-string/
// 🧠 Solved by: Akshay Kapse | 50-Day DSA Challenge (Day 15)
// 📅 Date: 2025-09-08
// 🧑‍💻 Language: JavaScript

/**
 * @param {string} num
 * @return {string}
 */
var largestGoodInteger = function (num) {
    let largest = ""
    for (let i = num.length - 1; i >= 2; i--) {
        if (num[i] === num[i - 1] && num[i] === num[i - 2]) {
            let triple = num[i].repeat(3)
            if (triple > largest){
                largest = triple
            }
        }
    }
    return largest
};
