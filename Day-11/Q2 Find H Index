/**
 * @param {number[]} citations
 * @returns {number}
 */
class Solution {
    hIndex(citations) {
        citations.sort((a,b) => b-a)
        for(let i=0; i<citations.length; i++){
            if(citations[i] < i+1){
                return i
            }
        }
        return citations.length
    }
}
