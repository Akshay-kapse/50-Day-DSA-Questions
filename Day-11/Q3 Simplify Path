/**
 * @param {string} path
 * @return {string}
 */
var simplifyPath = function (path) {
    let component = path.split("/")
    let ans = []

    for (let co of component) {
        if (co === "" || co === ".") {
            continue
        }

        if (co === "..") {
            if (ans.length) {
                ans.pop()
            }
        } else {
            ans.push(co)
        }
    }

    return "/" + ans.join("/")
};
