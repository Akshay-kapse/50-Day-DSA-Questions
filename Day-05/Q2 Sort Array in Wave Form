class Solution {
    sortInWave(arr) {
        function swap(arr, x, y) {
            let temp = arr[x]
            arr[x] = arr[y]
            arr[y] = temp
        }

        for (let i = 0; i < arr.length - 1; i += 2) {
            swap(arr, i, i + 1)
        }

        return arr
    }
}
