// 🔸 Platform: LeetCode
// 🔸 Problem: 91. Decode Ways
// 🔹 Difficulty: Medium
// 🔗 Link: https://leetcode.com/problems/decode-ways/
// 🧠 Solved by: Akshay Kapse | 50-Day DSA Challenge (Day 11)
// 📅 Date: 2025-08-01
// 🧑‍💻 Language: JavaScript

/**
 * @param {string} s
 * @return {number}
 */
var numDecodings = function (s) {
    if (s[0] === '0') return 0;

    let n = s.length
    let dp = new Array(n + 1).fill(0)
    dp[0] = 1
    dp[1] = 1

    for (let i = 2; i <= n; i++) {
        let OneDigit = parseInt(s.slice(i - 1, i))
        let TwoDigit = parseInt(s.slice(i - 2, i))

        if (OneDigit <= 9 && OneDigit >= 1) {
            dp[i] += dp[i - 1]
        }

        if (TwoDigit <= 26 && TwoDigit >= 10) {
            dp[i] += dp[i - 2]
        }
    }
    return dp[n]
};
