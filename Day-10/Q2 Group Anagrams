// 🔸 Problem: 49. Group Anagrams
// 🔹 Difficulty: Medium
// 🔗 Link: https://leetcode.com/problems/group-anagrams/
// 🧠 Solved by: Akshay Kapse | 50-Day DSA Challenge (Day 10)
// 📅 Date: 2025-07-30
// 🧑‍💻 Language: JavaScript

/**
 * @param {string[]} strs
 * @return {string[][]}
 */
var groupAnagrams = function(strs) {
    let map = new Map()

    for (let str of strs) {
        let Ar = str.split("").sort().join("")
        if (!map.has(Ar)) {
            map.set(Ar, [])
        }
        map.get(Ar).push(str)
    }
    return Array.from(map.values())
};
