/**
 * @param {string} pattern
 * @param {string} s
 * @return {boolean}
 */
var wordPattern = function (pattern, s) {
    const words = s.split(" ");
    if (words.length !== pattern.length) return false;

    const CharOfpattern = new Map();
    const CharOfwords = new Map();

    for (let i = 0; i < pattern.length; i++) {
        if (!CharOfpattern.has(pattern[i])) {
            CharOfpattern.set(pattern[i], i);
        }
        if (!CharOfwords.has(words[i])) {
            CharOfwords.set(words[i], i);
        }

        if (CharOfpattern.get(pattern[i]) !== CharOfwords.get(words[i])) {
            return false;
        }
    }
    return true;
};
