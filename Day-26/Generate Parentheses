/**
 * @param {number} n
 * @return {string[]}
 */
var generateParenthesis = function(n) {
    let ans = []

    function GP(s, left, right) {
        if (s.length === 2 * n) {
            ans.push(s)
            return
        }

        if (left < n) {
            GP(s + '(', left + 1, right)
        }
         if (left > right) {
            GP(s +')', left, right + 1)
        }
    }

    GP('', 0, 0)
    return ans
};
