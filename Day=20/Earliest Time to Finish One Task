// 🔸 Problem: Earliest Task Completion Time
// 🔹 Difficulty: Easy
// 🔗 Custom Practice Problem
// 🧠 Solved by: Akshay Kapse | 50-Day DSA Challenge (Day 20)
// 📅 Date: 2025-09-12
// 🧑‍💻 Language: JavaScript

/**
 * @param {number[][]} tasks
 * @return {number}
 */
var earliestTime = function(tasks) {
    let earliest = Infinity;

    for (let [s, t] of tasks) {
        let finished = s + t;
        earliest = Math.min(earliest, finished);
    }

    return earliest;
};

// Example usage:
console.log(earliestTime([[1,3],[2,2],[4,1]])); // Output: 3
