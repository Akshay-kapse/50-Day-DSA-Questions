/**
 * @param {string} digits
 * @return {string[]}
 */
var letterCombinations = function (digits) {
    if (digits.length === 0) return [];
    let dig = ["", "", "abc", "def", "ghi", "jkl", "mno", "pqrs", "tuv", "wxyz"]
    let res = []
    function Letter(index, temp) {
        if (index === digits.length) {
            res.push(temp)
            return
        }
        let letter = dig[digits[index] - '0']
        for (let lett of letter) {
            Letter(index + 1, temp + lett)
        }
    }
    Letter(0, "")
    return res
};
