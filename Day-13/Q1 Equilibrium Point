// User function Template for javascript

/**
 * @param {number[]} arr
 * @returns {number}
 */

class Solution {
    // Function to find equilibrium point in the array.
    findEquilibrium(arr) {
        let rightSum = 0
        let leftSum = 0
        
        for(let i = 0; i < arr.length; i++) {
            leftSum += arr[i]
        }
        
        for(let i = 0; i < arr.length; i++) {
            leftSum -= arr[i]
            if (leftSum === rightSum) {
                return i
            } else {
                rightSum += arr[i]
            }
        }
        return -1
    }
}
